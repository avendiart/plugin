{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "jsx": "react-jsx",
    "outDir": "dist"
  }
}
