{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "outDir": "dist/mjs"
  },
  "include": ["src"]
}
